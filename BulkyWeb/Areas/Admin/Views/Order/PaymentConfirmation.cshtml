@model int

@{
    ViewData["Title"] = "Payment Confirmation";
}

<div class="container row pt-4">
    <div class=" col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfully</h1>
        Your Order Number is @Model
        <br />
        <br />
        <img src="~/images/order-placed.jpg" class="img-fluid" alt="Thank You" width="50%" />
    </div>
    <div class=" col-12 text-center">
        <br />
        <a asp-area="Admin"
            asp-controller="Order" 
            asp-action="Details" 
            asp-route-orderId="@Model" class="btn btn-primary">Back to order details</a>
    </div>
</div>