@model Category;
<form method="POST">
    <input type="hidden" asp-for="Id" />
    <div class="border border-1 p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr class="border-1" />
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled/>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-6  col-lg-3 mb-3 mb-md-0  ">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-12 col-md-6 col-lg-3 mb-3 mb-md-0  ">
                <a asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>